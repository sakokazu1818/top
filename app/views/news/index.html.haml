%h1 ニュース管理画面

%table.table.table-striped.table-bordered
  %thead
    %tr
      %th タイトル
      %th タグ
      %th 概要
      %th

  %tbody
    - @news.each do |news|
      %tr
        %td= news.title
        %td= news.tag
        %td= news.text
        %td
          = link_to 'Show', news
          = link_to 'Edit', edit_news_path(news)
          = link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' }

.mt-5= link_to '新規作成', new_news_path, class: 'btn btn-outline-primary'
