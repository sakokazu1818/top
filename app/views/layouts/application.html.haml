!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }/
    %title Top
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .position-fixed
      .row
        .col-12
          %header
            = render 'header'
    .row
      .col-12
        = yield
    %footer
      .row
        .col-12
          = render 'footer'
