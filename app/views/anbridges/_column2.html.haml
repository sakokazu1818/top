.row.pt-5.pb-4
  .col-4
  .col-4.text-center
    .h1= 'NEWS'
    .font-weight-bold= 'お知らせ'
  .col-2
  .col-2.h4.text-center.align-self-end.new_more
    .pt-2.pb-2
      = link_to '#', class: 'pl-3' do
        = 'MORE'
        %i.fa.fa-angle-right.pl-3

- @news.each.with_index(1) do |n, i|
  - next if (i % 2).zero?
  .row.pt-3
    .col-5.b-u.ml-3
      = n[:title]
      %br
      = n[:text]
    .col-1
    .col-5.b-u.ml-5
      = @news[i - 2][:title]
      %br
      = @news[i - 2][:text]
    .col-1
