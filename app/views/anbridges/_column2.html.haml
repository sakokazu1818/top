.row.pt-5.pb-4
  .col-4
  .col-4.text-center
    .h1= 'NEWS'
    .font-weight-bold= 'お知らせ'
  .col-2
  .col-2.h4.text-center.align-self-end.new_more
    .pt-2.pb-2
      = link_to '#', class: 'pl-3' do
        = 'MORE'
        %i.fa.fa-angle-right.pl-3

- news = @news.each_slice(2).to_a
- news.each do |n|
  .row.pt-5
    - if n.length > 1
      .col-5.ml-3
        .row
          .news-at= n.first.created_at.strftime('%Y年%m月%d日')
          .col-3.tag.text-center= n.first.tag
        .row.pt-3
          .col-12.pl-0.b-u= n.first.text
      .col-1
      .col-5.ml-5
        .row
          .news-at= n.last.created_at.strftime('%Y年%m月%d日')
          .col-3.tag.text-center= n.last.tag
        .row.pt-3
          .col-12.pl-0.b-u= n.last.text
      .col-1
    - else
      .col-5.ml-3
        .row
          .news-at= n.first.created_at.strftime('%Y年%m月%d日')
          .col-3.tag.text-center= n.first.tag
        .row.pt-3
          .col-12.pl-0.b-u= n.first.text
      .col-1
      .col-5.ml-5
      .col-1
