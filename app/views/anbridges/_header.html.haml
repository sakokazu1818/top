%header
  %nav.navbar.navbar-expand-md.navbar-dark.fixed-top
    .navbar-brand= image_tag 'logo'
    #navbar-header.collapse.navbar-collapse
      %ul.navbar-nav.mr-auto
      %ul.navbar-nav
        - ([{ ja: 'TOP', href: root_path }] + @contents).each do |c|
          %li.nav-item.active
            %a.nav-link{:href => c[:href].present? ? c[:href] : '#'}
              = c[:ja]
