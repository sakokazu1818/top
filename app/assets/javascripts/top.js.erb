$(function(){
  $('.jumbotron-bg').bgSwitcher({
    images: ["<%= image_path('https://placehold.jp/50/cc9999/993333/500x500.png?text=画像1') %>",
    "<%= image_path('https://placehold.jp/50/CCCCFF/993333/500x500.png?text=画像2') %>",
    "<%= image_path('https://placehold.jp/50/CCFF99/993333/500x500.png?text=画像3') %>"],
  });

  $header = $('.header');
  $(window).scroll(function() {
    if ($(this).scrollTop() > 2152) {
      $($header).removeClass('bg-border');
    } else {
      $($header).addClass('bg-border');
    }

    // TODO wip
    console.log($(this).scrollTop());
    console.log($header);
  })
});
